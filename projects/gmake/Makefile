# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86)
  mn_config = debug_x86
  loom_config = debug_x86
  unittest_config = debug_x86
endif
ifeq ($(config),debug_x64)
  mn_config = debug_x64
  loom_config = debug_x64
  unittest_config = debug_x64
endif
ifeq ($(config),release_x86)
  mn_config = release_x86
  loom_config = release_x86
  unittest_config = release_x86
endif
ifeq ($(config),release_x64)
  mn_config = release_x64
  loom_config = release_x64
  unittest_config = release_x64
endif

PROJECTS := mn loom unittest

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

mn:
ifneq (,$(mn_config))
	@echo "==== Building mn ($(mn_config)) ===="
	@${MAKE} --no-print-directory -C . -f mn.make config=$(mn_config)
endif

loom: mn
ifneq (,$(loom_config))
	@echo "==== Building loom ($(loom_config)) ===="
	@${MAKE} --no-print-directory -C . -f loom.make config=$(loom_config)
endif

unittest: mn loom
ifneq (,$(unittest_config))
	@echo "==== Building unittest ($(unittest_config)) ===="
	@${MAKE} --no-print-directory -C . -f unittest.make config=$(unittest_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f mn.make clean
	@${MAKE} --no-print-directory -C . -f loom.make clean
	@${MAKE} --no-print-directory -C . -f unittest.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86"
	@echo "  debug_x64"
	@echo "  release_x86"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   mn"
	@echo "   loom"
	@echo "   unittest"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"